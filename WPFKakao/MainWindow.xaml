<Window x:Class="WPFKakao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFKakao"
        mc:Ignorable="d"
        Title="MainWindow" Height="744" Width="430"
        Background="#FFE800">

    <Grid >
        <StackPanel>
            <StackPanel HorizontalAlignment="Center" Width="430">
                <Image Source="/Views/Images/kakaoTalk_Logo.png" Height="140" Margin="0 100" />
            </StackPanel>
            <StackPanel Orientation="Vertical" >
                <TextBox Width="300" Height="50"/>
                <TextBox Width="300" Height="50"/>
            </StackPanel>
            <Button Content="Login" Width="300" Height="50" Margin="0 20"/>
            <CheckBox Content="자동로그인" Width="300"/>
            
            <StackPanel Orientation="Horizontal" Width="300" VerticalAlignment="Center" >
                <TextBlock Text="카카오 계정 찾기"/>
                <TextBlock Text="비밀번호 재설정"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
